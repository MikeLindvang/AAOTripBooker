@model AAOTripBooker.Models.Trip
<div class="container">
    <form method="post" asp-action="Update">
        <input asp-for="Id" hidden />
        <div class="form-group row">
            <h2>Rediger tur</h2>
        </div>
        <div class="row">
            
                <div class="col-4">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="Traffic"></label>
                    <select asp-for="Traffic" class="form-control" asp-items="@Html.GetEnumSelectList<Traffic>()" >
                        <option value="">-- Vælg Trafik --</option>
                    </select>
                </div>
                <div class="col-4">
                    <label asp-for="Contact"></label>
                    <input asp-for="Contact" class="form-control" />
                </div>
            
        </div>
        <div class="row">
            
                <div class="col-4">
                    <label asp-for="EndDate"></label>
                    <input asp-for="EndDate" class="form-control" />
                </div>
                <div class="col-4">
                    
                    <label asp-for="Days"></label>
                    <input asp-for="Days" class="form-check-input" />
                    <input asp-for="Duration" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="Department"></label>
                    <input asp-for="Department" class="form-control" />
                </div>
            
        </div>
        <div class="row">
            
                <div class="col-4">
                    <label asp-for="StartTime"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <label asp-for="Urgent"></label>
                    <input asp-for="Urgent" class="form-check-input" />
                </div>
                <div class="col-8">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" ></textarea>
                </div>
                
            
        </div>
        <div class="row">
            
                <div class="col-4">
                    <label asp-for="StartLocation"></label>
                    <select asp-for="StartLocation" class="form-control" asp-items="@Html.GetEnumSelectList<StartLocation>()" >
                        
                    </select>
                </div>
                <div class="col-4">

                </div>
                <div class="col-4">
                    <input type="submit" class="btn btn-success w-75 mt-4" value="Opdater tur" /> 
                </div>
            
        </div>
    </form>
</div>