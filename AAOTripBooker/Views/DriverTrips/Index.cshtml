            <td>
                @Html.DisplayFor(modelItem => item.Trip.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.Traffic)
            </td>
