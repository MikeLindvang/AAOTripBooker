            <th>@Html.DisplayNameFor(model => model.Trip.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.Trip.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.Trip.Traffic)</th>
