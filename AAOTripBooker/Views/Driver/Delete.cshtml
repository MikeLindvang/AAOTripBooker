@model AAOTripBooker.Models.Driver
<div class="container">
    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2>Slet Chauffør</h2>
        </div>
        <div class="row">
            
                <div class="col-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
            
        </div>
       
        
        <div class="row">
            
                <div class="col-4">
                    <input type="submit" class="btn btn-danger w-75 mt-4" value="Slet Chauffør" /> 
                </div>
                <div class="col-4">
                     
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success">Tilbage</a>
                </div>
            
        </div>
    </form>
</div>